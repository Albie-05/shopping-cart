{{#each products}}
<div class="container">
    <div class="row">
        {{#each this}}
        <div class="col-md-4">
            <div class="thumbnail">
                <img
                    src="{{this.imagepath}}"
                    alt=""
                    style="width:100%"
                    class="img-responsive"
                />
                <div class="caption">
                    <p class="description">{{this.description}}</p>
                    <div class="clearfix">
                        <div class="price pull-left">${{this.price}}</div>
                        <button
                            type="button"
                            class="btn btn-success pull-right"
                        >
                            Button
                        </button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{/each}}
